{
    // ───── Window ─────
    "window.title": " ",
    "window.restoreWindows": "none",
    "window.zoomLevel": 0.8,
    "window.menuBarVisibility": "compact",
    "window.commandCenter": false,

    // ───── Workbench ─────
    "workbench.startupEditor": "none",
    "workbench.layoutControl.enabled": false,
    "workbench.activityBar.location": "hidden",
    "workbench.statusBar.visible": true,
    "workbench.sideBar.visible": false,
    // "workbench.sideBar.location": "left",
    "workbench.view.defaultViewMode": "preserve",
    "workbench.editorAssociations": {
        "*.xlsx": "default"
    },
    "workbench.colorCustomizations": {
        "statusBar.background": "#3f0e8d",
        "statusBar.noFolderBackground": "#303030",
        "statusBar.debuggingBackground": "#511f1f"
    },

    // ───── Editor ─────
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.renderControlCharacters": false,
    "editor.rulers": [],
    "editor.hideCursorInOverviewRuler": true,
    "editor.overviewRulerBorder": false,
    "editor.stickyScroll.enabled": false,
    "editor.stickyScroll.scrollWithEditor": false,
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.horizontal": "hidden",
    "editor.cursorBlinking": "solid",
    "breadcrumbs.enabled": false,

    // ───── Files ─────
    "files.associations": {
        "*.bats": "shellscript"
    },

    // ───── Terminal ─────
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.defaultProfile.linux": "bash",
    // "terminal.integrated.automationProfile.linux": {},
    "terminal.integrated.shellIntegration.decorationsEnabled": "never",
    "terminal.integrated.rightClickBehavior": "default",
    "terminal.integrated.commandsToSkipShell": [
        "language-julia.interrupt"
    ],

    // ───── Notebook ─────
    "notebook.globalToolbar": false,
    "notebook.consolidatedOutputButton": false,

    // ───── Language Specific ─────

    // Python
    "python.linting.enabled": false,
    "python.terminal.activateEnvironment": false,

    // Julia
    "julia.symbolCacheDownload": true,
    "julia.NumThreads": "auto",
    "julia.enableTelemetry": true,
    "julia.execution.codeInREPL": true,
    "julia.execution.resultType": "REPL",

    // Chat
    "chat.commandCenter.enabled": false,

    // Dev Containers / Podman
    "dev.containers.dockerPath": "podman",
    "dev.containers.dockerComposePath": "podman",
    "dev.containers.dockerSocketPath": "/usr/lib/systemd/user/podman.socket",
    "remoteEnv": {
        "PODMAN_USERNS": "keep-id"
    },
    "containerUser": "vscode",

    // ───── Security ─────
    "security.workspace.trust.untrustedFiles": "open",
    "terminal.integrated.tabs.location": "left"
}
